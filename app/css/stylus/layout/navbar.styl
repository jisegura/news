nav

	&.navbar
		background-color transparent
		border none

		&:after
			content ""
			position absolute
			z-index 1000

		#logo
			display none

		.navbar-header

			.navbar-toggle
				border none !important
				z-index 1050

				span
					background-color $white
					transition 0.4s all

				&.closeNav

					.bar-1
						background-color red
						width 32px
						transform rotateZ(45deg) translateX(9px)

					.bar-2
						opacity 0

					.bar-3
						background-color red
						width 32px
						transform rotateZ(-45deg) translateX(8px)


				&:hover
				&:focus
					background-color transparent

				&:hover
					span
						width 24px


		.navbar-collapse
			text-align center
			border-top none !important
			height 100% !important

			ul
				display inline-block
				float none

				li
					position relative

					a
						color $white
						font-family 'Yanone Kaffeesatz'
						font-size 18px
						font-weight 700
						letter-spacing 2px
						padding-bottom 25px
						padding-top 25px
						text-transform uppercase
						z-index 2000
						transition color 0.3s ease

						&:hover
						&:focus
							color $gray80

					&.active

						a
							color $white
							cursor default
							background-color transparent

							&:hover
							&:focus
								color $white
								background-color transparent
