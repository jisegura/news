nav

	&.navbar
		background-color transparent
		//background-linear-gradient3d(to bottom, #000000, 0%, rgba(0, 0, 0, 0.49), 4%, rgba(0, 0, 0, 0), 100%)
		border none

		&:after
			content ""
			background-linear-gradient3d(to bottom, #000000, 0%, rgba(0, 0, 0, 0.49), 4%, rgba(0, 0, 0, 0), 100%)
			position absolute
			width 100%
			height 100px
			top -50px
			z-index 1000

		#logo
			display none

		.navbar-collapse
			text-align center

			ul
				display inline-block
				float none

				li
					position relative

					&:after
						content ""
						background-linear-gradient3d(to bottom, $success-bgc, 0%, rgba($success-bgc,.49), 4%, rgba($success-bgc, 0), 100%)
						position absolute
						width 100%
						height 100%
						top -20px
						left 0
						max-height 20px
						transition max-height 0.3s ease

					&:hover
					&:focus

						&:after
							max-height 80px

					a
						color $white
						font-family 'Yanone Kaffeesatz'
						font-size 18px
						font-weight 700
						letter-spacing 2px
						padding-bottom 25px
						padding-top 25px
						text-transform uppercase
						z-index 2000
						transition color 0.3s ease

						&:hover
						&:focus
							color $gray80

					&.active

						&:after
							max-height 80px

						a
							color $white
							cursor default
							background-color transparent

							&:hover
							&:focus
								color $white
								background-color transparent
